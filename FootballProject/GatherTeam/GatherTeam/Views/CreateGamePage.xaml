<Page
    x:Class="GatherTeam.Views.CreateGamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GatherTeam.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="4" Content="Создать" Style="{StaticResource ButtonStyle}"/>
        <ComboBox Grid.Row="1" PlaceholderText="Формат игры" ItemsSource="{Binding Path=GameFormats}" Style="{StaticResource ComboBoxStyle}"/>
        <ComboBox Grid.Row="2" PlaceholderText="Адрес" Style="{StaticResource ComboBoxStyle}"/>
        <TimePicker Grid.Row="3" Style="{StaticResource TimePickerStyle}"/>

    </Grid>
</Page>
